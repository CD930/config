# General Aliases
alias lsd="ls -A --color"
alias vi="nvim"
alias record="ffmpeg -video_size 1366x768 -framerate 24 -f x11grab -i :0.0 -f pulse -ac 2 -i alsa_output.pci-0000_00_09.2.analog-stereo.monitor output.mkv"
alias top="btop"
alias reconnect="nmcli device disconnect wlp3s0 && nmcli device wifi connect IZZI-E8CB password FCAE34B6E8CB"

# XBPS Aliases
alias xu="doas xbps-install -Su"
alias xi="doas xbps-install"
alias xq="xbps-query -Rs"
alias xr="doas xbps-remove -R"

# History
HISTFILE="$HOME/.mksh_history"
HISTSIZE=2000
export PATH="$HOME/.local/bin:$PATH"

# Looking
neofetch
PS1=$'\E[35;7m$(logname)@$(hostname)\E[0m:\E[32;1m$PWD\E[0m $: '
